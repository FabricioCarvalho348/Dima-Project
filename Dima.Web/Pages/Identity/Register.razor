@page "/comecar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img
                    src="images/dima.png"
                    alt="Dima - Controle Financeiro"
                    width="250" />
            </div>
            
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />
                
                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email"
                              Placeholder="Digite seu e-mail"/>

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo Obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password"
                              Placeholder="Digite sua senha"/>

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" Size="Size.Medium" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">COMEÇAR</MudButton>
                        <MudSpacer/>
                        <MudButton Href="/login">JÁ TENHO UMA CONTA</MudButton>
                    }
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>